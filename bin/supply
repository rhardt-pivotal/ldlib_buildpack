#!/bin/bash
set -e

echo "IN SUPPLY!!"
pwd
ls -al

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
echo $DIR


mkdir $3/$4/lib

echo "$3/$4/lib"

cp $DIR/../libsrc/* $3/$4/lib

cat <<EOF >> $3/$4/config.yml
--- 
name: ldlib_buildpack
config:
  environment_variables:
    LD_LIBRARY_PATH: "\$HOME/deps/$4/lib:\$LD_LIBRARY_PATH"
EOF
